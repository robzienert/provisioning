description "Log shipper"
start on runlevel [2345]
stop on runlevel [!2345]

console log
limit nofile 65536 65536
respawn
setgid {{logstash_user}}
setuid {{logstash_group}}
chdir {{logstash_forwarder_home}}

exec {{logstash_forwarder_home}}/bin/logstash-forwarder -config {{logstash_confdir}}/forwarder.json
